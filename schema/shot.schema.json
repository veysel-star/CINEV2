{
  "type": "object",
  "required": [
    "id",
    "phase",
    "status",
    "inputs",
    "outputs",
    "history"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^SH[0-9]{3}$"
    },
    "phase": {
      "type": "string",
      "enum": ["FAZ_1", "FAZ_2", "FAZ_3"]
    },
    "status": {
      "type": "string",
      "enum": ["PLANNED", "IN_PROGRESS", "QC", "BLOCKED", "DONE"]
    },
    "inputs": {
      "type": "object",
      "required": ["prompt"],
      "properties": {
        "prompt": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false
    },
    "outputs": {
      "type": "object"
    },
    "history": {
      "type": "array"
    }
  },
  "additionalProperties": false
}

